<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="DialogShadow" TargetType="Border">
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="10" />
    <Setter Property="Effect">
      <Setter.Value>
        <DropShadowEffect Color="#A7A7A7"
          Direction="260"
          ShadowDepth="5"
          BlurRadius="10"
          Opacity="0.4" />
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="DialogEdgeOutline" TargetType="Border">
    <Setter Property="BorderBrush" Value="#dee2e6" />
    <Setter Property="Background" Value="#F2F2F2" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Padding" Value="6" />
  </Style>

  <Style x:Key="DialogContentArea" TargetType="StackPanel">
    <Setter Property="Margin" Value="20 15" />
    <Setter Property="VerticalAlignment" Value="Top" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>

  <Style x:Key="DialogTitleBar" TargetType="DockPanel">
    <Setter Property="Margin" Value="0 0 0 15" />
    <Setter Property="VerticalAlignment" Value="Top" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>

  <Style x:Key="DialogTitleText" TargetType="TextBlock">
    <Setter Property="FontSize" Value="19" />
    <Setter Property="Foreground" Value="#333" />
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="VerticalAlignment" Value="Top" />
  </Style>

  <Style x:Key="DialogCloseIcon" TargetType="TextBlock">
    <Setter Property="FontSize" Value="18" />
    <Setter Property="FontFamily" Value="{StaticResource Phosphor}" />
    <Setter Property="Text" Value="&#xE4F6;" />
    <Setter Property="Foreground" Value="#333" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="ToolTip" Value="Close" />
    <Setter Property="HorizontalAlignment" Value="Right" />
    <Setter Property="VerticalAlignment" Value="Top" />
  </Style>

  <Style x:Key="DialogContents" TargetType="Grid">
    <Setter Property="Margin" Value="0 10" />
  </Style>
</ResourceDictionary>