<Window x:Class="ImageShare.Dialogs.SimpleDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ImageShare.Dialogs"
  mc:Ignorable="d"
  WindowStyle="None"
  WindowStartupLocation="CenterScreen"
  AllowsTransparency="True"
  Background="Transparent"
  ShowInTaskbar="False"
  SizeToContent="WidthAndHeight"
  Width="600">
  <Window.Resources>
    <Style x:Key="HeadingText" TargetType="TextBlock">
      <Setter Property="FontSize" Value="22" />
      <Setter Property="Foreground" Value="#333" />
    </Style>
    <Style x:Key="ErrorDescription" TargetType="TextBlock">
      <Setter Property="Foreground" Value="#333" />
      <Setter Property="FontSize" Value="17" />
      <Setter Property="TextWrapping" Value="Wrap" />
      <Setter Property="LineHeight" Value="10" />
    </Style>
  </Window.Resources>
  <Border Padding="20 20 20 30" CornerRadius="10" BorderThickness="10" Background="White">
    <Border.Effect>
      <DropShadowEffect Color="#A7A7A7" Direction="260"
        ShadowDepth="5" BlurRadius="10" Opacity="0.4" />
    </Border.Effect>
    <StackPanel>
      <DockPanel VerticalAlignment="Center" Margin="0 0 0 15" HorizontalAlignment="Stretch">
        <TextBlock Name="HeadingTextBlock" Style="{StaticResource HeadingText}" Text="Heading" />
        <TextBlock MouseDown="CloseTextBox_OnMouseDown" FontFamily="{StaticResource Phosphor}"
          ToolTip="Close"
          Text="&#xE4F6;"
          Cursor="Hand"
          FontSize="20"
          Foreground="#333"
          HorizontalAlignment="Right" />
      </DockPanel>
      <TextBlock
        MaxWidth="600"
        Name="DescriptionTextBlock" Style="{StaticResource ErrorDescription}" Text="Details goes here" />
    </StackPanel>
  </Border>
</Window>