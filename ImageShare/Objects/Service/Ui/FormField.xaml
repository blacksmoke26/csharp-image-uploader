<UserControl x:Class="PixPost.Objects.Service.Ui.FormField"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:PixPost.Objects.Service.Ui"
  mc:Ignorable="d"
  DataContext="{Binding}"
  Background="Transparent"
  d:DesignWidth="300">
  <StackPanel Margin="0 15 0 0">
    <TextBlock
      Style="{StaticResource FormInputCaptionTextBox}"
      Text="{Binding InputField.Label, Mode=OneWay}"
      />
    <TextBox
      Text="{Binding Path=Key, Mode=OneWay}"
      Style="{StaticResource FormTextBoxStyle}" />
  </StackPanel>
</UserControl>
