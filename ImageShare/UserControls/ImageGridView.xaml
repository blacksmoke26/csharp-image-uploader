<UserControl x:Class="ImageShare.UserControls.ImageGridView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ImageShare.UserControls"
  mc:Ignorable="d"
  Background="Transparent">
  <UserControl.Resources>
    <Style x:Key="ThumbAction"
      TargetType="TextBlock">
      <Setter Property="FontFamily"
        Value="{StaticResource Phosphor}" />
      <Setter Property="FontSize"
        Value="14" />
      <Setter Property="HorizontalAlignment"
        Value="Left" />
      <Setter Property="VerticalAlignment"
        Value="Top" />
    </Style>
    <Style x:Key="ThumbActionBorder"
      TargetType="Border">
      <Setter Property="Cursor" Value="Hand" />
      <Setter Property="Padding" Value="6" />
      <Setter Property="CornerRadius" Value="50" />
      <Setter Property="Background"
        Value="White" />
      <Setter Property="Effect">
        <Setter.Value>
          <DropShadowEffect ShadowDepth="4" BlurRadius="5"
            Direction="250" Color="Silver" Opacity="0.4" />
        </Setter.Value>
      </Setter>
    </Style>
  </UserControl.Resources>

  <ListView Name="ThumbsListView"
    BorderBrush="Transparent" BorderThickness="0" Background="Transparent"
    VerticalAlignment="Center" HorizontalContentAlignment="Left" HorizontalAlignment="Left">
    <ListView.ItemContainerStyle>
      <Style TargetType="{x:Type ListViewItem}">
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type ListViewItem}">
              <ContentPresenter />
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ListView.ItemContainerStyle>
    <ListView.ItemsPanel>
      <ItemsPanelTemplate>
        <StackPanel Orientation="Horizontal" ></StackPanel>
      </ItemsPanelTemplate>
    </ListView.ItemsPanel>
    <ListView.ItemTemplate>
      <DataTemplate>
        <DockPanel HorizontalAlignment="Left"
          Margin="5 0"
          VerticalAlignment="Bottom">
          <StackPanel HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ZIndex="12">
            <Border ToolTip="Edit Image" MouseDown="ImageEdit_OnMouseDown"
              DataContext="{Binding}"
              Margin="0 3 0 0"
              Style="{StaticResource ThumbActionBorder}">
              <TextBlock Style="{StaticResource ThumbAction}"
                Text="&#xE34C;" />
            </Border>
            <Border ToolTip="Remove Image" MouseDown="ImageRemove_OnMouseDown" Margin="0 3 0 0"
              Style="{StaticResource ThumbActionBorder}" DataContext="{Binding}">
              <TextBlock Style="{StaticResource ThumbAction}"
                Text="&#xE4A6;" />
            </Border>
          </StackPanel>
          <Border>
            <Image Margin="-20 0 0 0"
              Source="{Binding Path=ThumbnailPath}"
              Width="80" />
          </Border>
        </DockPanel>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</UserControl>