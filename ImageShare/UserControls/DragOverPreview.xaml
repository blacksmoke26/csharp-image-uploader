<UserControl x:Class="PixPost.UserControls.DragOverPreview"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:PixPost.UserControls"
  mc:Ignorable="d">
  <UserControl.Resources>
    <Style x:Key="UploadIcon"
      TargetType="TextBlock">
      <Setter Property="VerticalAlignment"
        Value="Bottom" />
      <Setter Property="HorizontalAlignment"
        Value="Center" />
      <Setter Property="FontFamily"
        Value="{StaticResource Phosphor}" />
      <Setter Property="FontWeight"
        Value="Medium" />
      <Setter Property="Foreground"
        Value="#76C2AF" />
      <Setter Property="FontSize"
        Value="90" />
    </Style>
  </UserControl.Resources>
  <StackPanel>
    <TextBlock Style="{StaticResource UploadIcon}"
      Text="&#xE1AE;" />
    <TextBlock FontSize="18"
      HorizontalAlignment="Center"
      Margin=" 0 15 0 10">
      Drag and Drop or paste images here to upload
    </TextBlock>
    <TextBlock FontSize="16"
      TextAlignment="Center">
      <Span>You can also</Span> <Span Foreground="DodgerBlue">browser from your computer</Span>
    </TextBlock>
  </StackPanel>
</UserControl>