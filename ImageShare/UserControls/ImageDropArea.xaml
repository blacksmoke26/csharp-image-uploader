<UserControl x:Class="ImageShare.UserControls.ImageDropArea"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ImageShare.UserControls"
  mc:Ignorable="d">
  <StackPanel>
    <TextBlock FontSize="30"
      FontWeight="Medium"
      HorizontalAlignment="Center"
      Margin="0 0 0 6">
      Upload and share your images.
    </TextBlock>
    <TextBlock FontSize="18"
      FontWeight="Light"
      HorizontalAlignment="Center"
      VerticalAlignment="Stretch"
      Margin="0 0 0 15">
      Drag and drop anywhere you want and start uploading your images now
    </TextBlock>
    <Button Background="#2a80b9" Click="ButtonBase_OnClick"
      Padding="30 12"
      FontSize="15"
      FontWeight="DemiBold"
      Foreground="White"
      BorderThickness="0"
      HorizontalAlignment="Center"
      Content="START UPLOADING" />
  </StackPanel>
</UserControl>