<Window x:Class="ImageShare.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:ImageShare"
  xmlns:uc="clr-namespace:ImageShare.UserControls"
  xmlns:hl="clr-namespace:ImageShare.Helpers"
  mc:Ignorable="d"
  WindowStartupLocation="CenterScreen"
  Title="PixPost - Image Sharing Online"
  Height="450"
  Width="800"
  WindowStyle="None"
  AllowsTransparency="True"
  Background="Transparent"
  AllowDrop="True">
  <Window.Resources>
  </Window.Resources>
  <Border Background="#F2F2F2"
    CornerRadius="10"
    BorderThickness="10">
    <Border.Effect>
      <DropShadowEffect Color="#A7A7A7"
        Direction="260"
        ShadowDepth="5"
        BlurRadius="10"
        Opacity="0.4" />
    </Border.Effect>
    <Grid>
      <uc:DragOverPreview x:Name="DragPreviewPanel"
        Background="#F2F2F2"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        Panel.ZIndex="2"
        Visibility="Collapsed" />

      <StackPanel Margin="20"
        Panel.ZIndex="1"
        x:Name="FileInfoPanel"
        Visibility="Collapsed"
        Background="#F2F2F2">
        <DockPanel>
          <TextBlock VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontWeight="Medium"
            Text="PixPost - Image Sharing Online"
            Foreground="#333" />
          <DockPanel HorizontalAlignment="Right">
            <TextBlock MouseDown="WindowMinimize_OnMouseDown"
              Margin="10 0"
              Foreground="#444"
              Cursor="Hand"
              HorizontalAlignment="Right"
              VerticalAlignment="Center">
              <Run FontFamily="{StaticResource Phosphor}"
                FontSize="18"
                Cursor="Hand"
                ToolTip="Minimize"
                MouseDown="ContentElement_OnMouseDown"
                Text="&#xE136;" />
            </TextBlock>
            <TextBlock MouseDown="WindowClose_OnMouseDown"
              Foreground="#444"
              Cursor="Hand"
              HorizontalAlignment="Right"
              VerticalAlignment="Center">
              <Run FontFamily="{StaticResource Phosphor}"
                FontSize="18"
                Cursor="Hand"
                ToolTip="Close"
                Text="&#xE4F6;"
                MouseDown="ContentElement_OnMouseDown" />
            </TextBlock>
          </DockPanel>
        </DockPanel>
        <uc:ImageDropArea Margin="0 130 0 0"
          Background="#F2F2F2"
          VerticalAlignment="Center"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center"
          UploadClick="ImageDropArea_OnUploadClick" />
      </StackPanel>
      <StackPanel Margin="20"
        VerticalAlignment="Top"
        Panel.ZIndex="0"
        Background="#F2F2F2">
        <DockPanel>
          <TextBlock Name="PreviewHeaderFilesInfo"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Text=""
            Foreground="#999" />
          <TextBlock Foreground="#444"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
            <Run FontFamily="{StaticResource Phosphor}"
              FontSize="18"
              Cursor="Hand"
              ToolTip="Clear selected images"
              Text="&#xE038;"
              MouseDown="ContentElement_OnMouseDown" />
          </TextBlock>
        </DockPanel>
        <TextBlock Margin="0 8"
          HorizontalAlignment="Center"
          FontFamily="{StaticResource Phosphor}"
          FontSize="55"
          Foreground="#2a80b9"
          Text="&#xE834;" />
        <TextBlock TextAlignment="Center"
          FontWeight="Light"
          Margin="0 0 0 8"
          TextWrapping="WrapWithOverflow"
          FontSize="18">
          Edit or resize any image by clicking the image preview
        </TextBlock>
        <TextBlock FontSize="16"
          Margin="0 0 0 8"
          Cursor="Hand"
          TextAlignment="Center">
          <Span>You can also</Span>
          <Span Foreground="DodgerBlue"
            MouseDown="ImageDropArea_OnUploadClick">
            browser from your computer
          </Span>
        </TextBlock>
        <uc:ImageListViewer Width="600"
          HorizontalContentAlignment="Center"
          Height="110"
          x:Name="ImagesViewer" />
        <StackPanel VerticalAlignment="Center"
          HorizontalAlignment="Center">
          <TextBlock Text="Auto delete image"
            FontSize="16" Margin="0 0 0 5" />
          <ComboBox FocusVisualStyle="{x:Null}" Padding="8 5 5 8" ItemsSource="{Binding }"
            Name="ExpiryComboBox"
            SelectedIndex="0"
            FontSize="16"
            SelectedValuePath="Key" DisplayMemberPath="Value"
            Width="250"/>
          <Button
            FocusVisualStyle="{x:Null}"
            Margin="0 8 0 0"
            FontSize="16"
            BorderThickness="0"
            Click="UploadButton_OnClick"
            Style="{StaticResource PlainButtonStyle}"
            Content="Upload" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
      </StackPanel>
    </Grid>
  </Border>
</Window>