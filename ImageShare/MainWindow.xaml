<Window x:Class="ImageShare.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:ImageShare"
  xmlns:uc="clr-namespace:ImageShare.UserControls"
  mc:Ignorable="d"
  WindowStartupLocation="CenterScreen"
  Title="Image Share"
  Height="450"
  Width="800"
  MouseDown="MainWindow_OnMouseDown">
  <Border Name="FileAreaBorder"
    AllowDrop="True"
    Padding="50 0"
    VerticalAlignment="Stretch"
    Background="#F2F2F2">
    <StackPanel VerticalAlignment="Center"
      HorizontalAlignment="Stretch">
      <uc:DragOverPreview x:Name="DragPreviewPanel"
        Visibility="Collapsed" />
      <uc:ImageDropArea x:Name="FileInfoPanel" UploadClick="ImageDropArea_OnUploadClick"/>
    </StackPanel>
  </Border>
</Window>